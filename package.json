{
  "name": "interva",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "dev:frontend": "npm -w frontend run dev",
    "dev:backend": "npm -w backend run start:dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "npm -w frontend run build",
    "build:backend": "npm -w backend run build",
    "db:migrate": "npm -w backend run prisma:migrate",
    "db:seed": "npm -w backend run prisma:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
